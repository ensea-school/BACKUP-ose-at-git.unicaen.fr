<?php
use Application\Assertion\ContratAssertion;

$contrats    = $this->contrats;
$intervenant = $this->intervenant; /* @var $intervenant \Application\Entity\Db\Intervenant */
$role        = $this->role;
?>

<style>
    th.structure, td.structure { width: 100px; }
    th.retour, td.retour { width: 75px; }
</style>

<style>
    .ui-datepicker{z-index:1151 !important; }
</style>

<?php if ($contrats): ?>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="structure">Composante d'enseignement</th>
            <th>Contrat ou avenant</th>
            <th class="retour">Retour<br />signé</th>
        </tr>
    </thead>
    <tbody>
        <?php foreach ($contrats as $contrat): /* @var $contrat \Application\Entity\Db\Contrat */ ?>
        <tr>
            <?php
            $contratToString = $contrat->toString(true, true);
            $urlSuppression  = $this->url('contrat/supprimer',     ['contrat' => $contrat->getId()]);
            $urlExport       = $this->url('contrat/exporter',      ['contrat' => $contrat->getId()]);
            $urlValidation   = $this->url('contrat/valider',       ['contrat' => $contrat->getId()]);
            $urlDevalidation = $this->url('contrat/devalider',     ['contrat' => $contrat->getId()]);
            $urlSaisieRetour = $this->url('contrat/saisir-retour', ['contrat' => $contrat->getId()]);
            ?>
            <td class="structure"><?php echo $contrat->getStructure() ?></td>
            <td>
                <p>
                    <strong><?php echo $contrat ?></strong> créé par
                    <?php echo $this->utilisateur($contrat->getHistoModificateur()) ?>

                    <?php if ($this->isAllowed($contrat, ContratAssertion::PRIVILEGE_EXPORTER)): ?>
                    <span class="pull-right">
                        <a href="<?php echo $urlExport ?>"
                           title="Exporter le contrat/avenant au format PDF"><span class="glyphicon glyphicon-export"></span> Exporter en PDF</a>
                    </span>
                    <?php endif; ?>
                </p>
                <p>
                    <?php if ($this->isAllowed($contrat, ContratAssertion::PRIVILEGE_DELETE)): ?>
                        <a href="<?php echo $urlSuppression ?>" class="btn btn-danger ajax-modal"
                           data-event="event-contrat-suppr">Supprimer <?php echo $contrat->toString(true) ?></a>
                    <?php endif; ?>

                    <?php if (($validation = $contrat->getValidation())): ?>
                        <?php echo $this->messenger()->setMessage((string)$this->validationDl($validation), 'success') ?>

                        <?php if ($this->isAllowed($contrat, ContratAssertion::PRIVILEGE_DEVALIDER)): ?>
                            <a href="<?php echo $urlDevalidation ?>" class="btn btn-primary ajax-modal"
                               data-event="event-validation-suppr">Supprimer la validation <?php echo $contrat->toString(true, true) ?></a>
                        <?php endif; ?>
                    <?php else: ?>
                        <?php if ($this->isAllowed($contrat, ContratAssertion::PRIVILEGE_VALIDER)): ?>
                            <a href="<?php echo $urlValidation ?>" class="btn btn-primary ajax-modal"
                               data-event="event-contrat-validation">Valider <?php echo $contrat->toString(true) ?></a>
                        <?php endif; ?>
                    <?php endif; ?>
                </p>
                <p>
                    <?php echo $this->partial('application/contrat/partial/services-contrat', [
                            'label'    => "Enseignements ayant déclenché la création de ce contrat/avenant :",
                            'contrat'  => $contrat,
                            'services' => $this->services[$contrat->getId()]]) ?>
                </p>

                <?php if ($contrat->getValidation() && $contrat->getDateRetourSigne()): ?>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Dépôt du contrat signé</strong>
                    </div>
                    <div class="panel-body upload-container">
                        <?php
                        $urlAjouter = $this->url('contrat/deposer-fichier', ['contrat' => $contrat->getId()], [], true);
                        $urlLister  = $this->url('contrat/lister-fichier',  ['contrat' => $contrat->getId()], [], true);
                        $uploader   = $this->uploader()->setUrl($urlAjouter);
                        ?>
                        <div class="row">
                            <!-- Liste des fichiers déposés -->
                            <div class="col-md-6">
                                <?php echo $uploader->renderUploadedFiles($urlLister) ?>
                            </div>
                            <!-- formulaire de dépôt -->
                            <div class="col-md-6">
                                <?php if ($this->isAllowed($contrat, ContratAssertion::PRIVILEGE_DEPOSER)): ?>
                                <?php echo $uploader->renderForm() ?>
                                <?php endif; ?>
                            </div>
                        </div>
                    </div>
                </div>
                <?php endif ?>
            </td>
            <td class="retour">
                <?php if (($d = $contrat->getDateRetourSigne())): ?>
                <p><?php echo $d->format(Common\Constants::DATE_FORMAT) ?></p>
                <?php endif ?>
                <?php //if ($role instanceof Application\Acl\ComposanteRole && $contrat->getValidation()): ?>
                <?php if ($this->isAllowed($contrat, ContratAssertion::PRIVILEGE_DATE_RETOUR)): ?>
                    <a href="<?php echo $urlSaisieRetour ?>" class="btn btn-primary ajax-modal"
                       data-event="event-saisie-retour-suppr"
                       title="Cliquez pour saisir la date de retour <?php echo $contrat->toString(true, true) ?> signé">Saisir</a>
                <?php endif ?>
            </td>
        </tr>
        <?php endforeach; ?>
    </tbody>
</table>
<?php else: ?>
<p>Aucun contrat/avenant trouvé.</p>
<?php endif; ?>


<script>
    $("body").on("event-contrat-suppr event-contrat-validation event-validation-suppr event-saisie-retour-suppr", function(event, data) {
        event.div.modal('hide'); // ferme la fenêtre modale
        window.location.reload();
    });
</script>