<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Plafond\Entity\Db\Plafond" table="PLAFOND">
        <id name="id" type="integer" column="ID">
            <generator strategy="SEQUENCE"/>
        </id>
        <field name="numero" type="integer" column="NUMERO" nullable="false"/>
        <field name="libelle" type="string" column="LIBELLE" length="150" nullable="false"/>
        <field name="message" type="string" column="MESSAGE" length="500" nullable="true"/>
        <field name="requete" type="string" column="REQUETE" length="4000" nullable="false"/>
        <field name="ok" type="boolean" column="OK" nullable="false"/>
        <field name="messageErreur" type="string" column="MESSAGE_ERREUR" length="2000" nullable="true"/>

        <many-to-one field="plafondPerimetre" target-entity="Plafond\Entity\Db\PlafondPerimetre">
            <join-columns>
                <join-column name="PLAFOND_PERIMETRE_ID" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>
        <one-to-many field="plafondStructure" target-entity="Plafond\Entity\Db\PlafondStructure" mapped-by="plafond"/>
        <one-to-many field="plafondReferentiel" target-entity="Plafond\Entity\Db\PlafondReferentiel" mapped-by="plafond"/>
        <one-to-many field="plafondMission" target-entity="Plafond\Entity\Db\PlafondMission" mapped-by="plafond"/>
        <one-to-many field="plafondStatut" target-entity="Plafond\Entity\Db\PlafondStatut" mapped-by="plafond"/>
    </entity>
</doctrine-mapping>
