            // la colonne
            for (k = 0; k < m; k++) {
                objCell = objR[k].children;
                n = objCell.length;
                for (l = 0; l < n; l++) {
                    if ((k == j) && (l <= i)) {
                        clr = "#FCF8E3";
                    } else if ((l == i) && (k <= j)) {
                        clr = "#FCF8E3";
                    } else {
                        clr = "#FFFFFF";
                    }
                    objCell[l].style.backgroundColor = clr;
                }
            }
