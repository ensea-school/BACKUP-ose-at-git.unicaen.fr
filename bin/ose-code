#!/bin/bash

# Stocke le répertoire d'oû est lancé le script, au cas où
export SCRIPT_LAUNCH_DIR="$PWD"

# Résoudre le chemin réel du script, même si c'est un lien symbolique
SOURCE="${BASH_SOURCE[0]}"
while [ -L "$SOURCE" ]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  # Si le lien symbolique est relatif, résolvez-le par rapport à son répertoire
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"

APP_DIR="$(dirname "$DIR")"

cd $APP_DIR;

./vendor/bin/laminas unicaen-code:run $@