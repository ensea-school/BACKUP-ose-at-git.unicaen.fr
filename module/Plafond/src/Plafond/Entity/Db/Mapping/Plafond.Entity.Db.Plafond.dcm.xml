<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Plafond\Entity\Db\Plafond" table="PLAFOND">
        <id name="id" type="integer" column="ID"/>
        <field name="code" type="string" column="CODE" length="40" nullable="false"/>
        <field name="libelle" type="string" column="LIBELLE" length="150" nullable="false"/>
        <field name="requete" type="string" column="REQUETE" length="4000" nullable="false"/>

        <many-to-one field="plafondPerimetre" target-entity="Plafond\Entity\Db\PlafondPerimetre">
            <join-columns>
                <join-column name="PLAFOND_PERIMETRE_ID" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
