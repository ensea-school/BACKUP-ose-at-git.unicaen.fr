#!/usr/bin/env php
<?php

require_once dirname(__DIR__) . '/admin/src/OseAdmin.php';

$oa = OseAdmin::getInstance();

$c = $oa->getConsole();

$action = $c->getArg(1) ?: 'phpunit';

if ('phpunit' == $action){
    $c->exec(dirname(__DIR__).'/vendor/bin/phpunit tests --color=always');
}else{
    // lancement du script demandÃ©
    $oa->testsInit();
    $oa->test($action);
}