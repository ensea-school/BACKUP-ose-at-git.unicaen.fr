<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Mission\Entity\Db\Candidature" table="CANDIDATURE">
        <indexes>
            <index name="IDX_61FC67DE59860CDC" columns="HISTO_CREATEUR_ID"/>
            <index name="IDX_61FC67DE7E9E2204" columns="HISTO_DESTRUCTEUR_ID"/>
            <index name="IDX_61FC67DE63F06898" columns="HISTO_MODIFICATEUR_ID"/>
            <index name="IDX_61FC67DE63F06898" columns="INTERVENANT_ID"/>
        </indexes>
        <unique-constraints>
            <unique-constraint name="candidature_un" columns="INTERVENANT_ID,OFFRE_ID,HISTO_DESTRUCTION"/>
        </unique-constraints>
        <id name="id" type="integer" column="ID">
            <generator strategy="SEQUENCE"/>
        </id>
        <many-to-one field="intervenant" target-entity="Intervenant\Entity\Db\Intervenant" fetch="EAGER">
            <join-columns>
                <join-column name="INTERVENANT_ID" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="offre" target-entity="Mission\Entity\Db\OffreEmploi" inversed-by="candidatures">
            <join-columns>
                <join-column name="OFFRE_EMPLOI_ID" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="validation" target-entity="Workflow\Entity\Db\Validation">
            <join-column name="VALIDATION_ID" referenced-column-name="ID"/>
        </many-to-one>
        <field name="motif" type="string" column="MOTIF" length="4000" nullable="true"/>
        <field name="dateCommission" type="datetime" column="DATE_COMMISSION" nullable="true"/>

        <field name="histoCreation" type="datetime" column="HISTO_CREATION" nullable="false"/>
        <many-to-one field="histoCreateur" target-entity="Application\Entity\Db\Utilisateur">
            <join-column name="HISTO_CREATEUR_ID" referenced-column-name="ID"/>
        </many-to-one>
        <field name="histoModification" type="datetime" column="HISTO_MODIFICATION" nullable="false"/>
        <many-to-one field="histoModificateur" target-entity="Application\Entity\Db\Utilisateur">
            <join-column name="HISTO_MODIFICATEUR_ID" referenced-column-name="ID"/>
        </many-to-one>
        <field name="histoDestruction" type="datetime" column="HISTO_DESTRUCTION" nullable="true"/>
        <many-to-one field="histoDestructeur" target-entity="Application\Entity\Db\Utilisateur">
            <join-columns>
                <join-column name="HISTO_DESTRUCTEUR_ID" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>