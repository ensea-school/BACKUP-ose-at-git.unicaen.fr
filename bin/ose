#!/usr/bin/env php
<?php

spl_autoload_register(function ($class) {
    $root = dirname(__DIR__);

    $dirs = [
            $root . '/admin/src/',
            $root . '/admin/actul/src/',
    ];

    foreach($dirs as $dir) {
        $filename = $dir . str_replace('\\', '/', $class) . '.php';

        if (file_exists($filename)) {
            require_once $filename;
            break;
        }
    }
});

$c  = new Console();
$oa = new OseAdmin($c);
$oa->init();

$oa->run($c->getArg(1) ?: 'help');