<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\Entity\Db\Utilisateur" table="UTILISATEUR">
    <unique-constraints>
      <unique-constraint name="utilisateur_personnel_un" columns="PERSONNEL_ID"/>
      <unique-constraint name="utilisateur_intervenant_un" columns="INTERVENANT_ID"/>
      <unique-constraint name="utilisateur_username_un" columns="USERNAME"/>
    </unique-constraints>
    <id name="id" type="integer" column="ID">
      <generator strategy="SEQUENCE"/>
    </id>
    <field name="display_name" type="string" column="DISPLAY_NAME" length="64" nullable="false"/>
    <field name="email" type="string" column="EMAIL" length="255" nullable="false"/>
    <field name="password" type="string" column="PASSWORD" length="128" nullable="false"/>
    <field name="state" type="integer" column="STATE" nullable="false"/>
    <field name="username" type="string" column="USERNAME" length="255" nullable="false"/>
    <many-to-one field="intervenant" target-entity="Application\Entity\Db\Intervenant">
      <join-columns>
        <join-column name="INTERVENANT_ID" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="personnel" target-entity="Application\Entity\Db\Personnel">
      <join-columns>
        <join-column name="PERSONNEL_ID" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="role" target-entity="Application\Entity\Db\UtilisateurRole" mapped-by="user"/>
  </entity>
</doctrine-mapping>
